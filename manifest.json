{
  "manifest_version": 3,
  "name": "Simple Note v2",
  "version": "1.0.1",
  "description": "A simple note Chrome extension v2",
  "permissions": ["storage", "downloads", "clipboardRead", "sidePanel"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}